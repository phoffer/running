<%= form_for(@shoe) do |f| %>
  <% if @shoe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@shoe.errors.count, "error") %> prohibited this shoe from being saved:</h2>

      <ul>
      <% @shoe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :brand %><br>
    <%= f.text_field :brand %>
  </div>
  <div class="field">
    <%= f.label :model %><br>
    <%= f.text_field :model %>
  </div>
  <div class="field">
    <%= f.label :version %><br>
    <%= f.text_field :version %>
  </div>
  <div class="field">
    <%= f.label :letter %><br>
    <%= f.text_field :letter %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.select(:status) do %>
      <% Shoe::STATUS.each do |status| %>
        <%= content_tag(:option, status, value: status, selected: f.object.status == status) %>
      <% end %>
    <% end %>  
  </div>
  <div class="field">
    <%= f.label :defaults %><br>
    <%= collection_check_boxes(:shoe, :defaults, Run::CATEGORIES, :to_s, :to_s) %>
  </div>
  <div class="field">
    <%= f.label :expectation %><br>
    <%= f.number_field :expectation %>
  </div>
  <div class="field">
    <%= f.label :cost %><br>
    <%= f.text_field :cost %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
