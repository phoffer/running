<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @shoe.user.email %>
</p>

<p>
  <strong>Status:</strong>
  <%= @shoe.status %>
</p>

<p>
  <strong>Miles:</strong>
  <%= @shoe.miles.round(2) %>
</p>

<p>
  <strong>Expectation:</strong>
  <%= @shoe.expectation %>
</p>

<p>
  <strong>Cost:</strong>
  <%= @shoe.cost %>
</p>

<p>
  <strong>Location:</strong>
  <%= @shoe.location %>
</p>

<br />
<%= link_to 'Edit',  edit_shoe_path(@shoe) %> | <%= link_to 'Back', shoes_path %> | 
<%= link_to 'Clone', new_shoe_path(clone: @shoe.id) %>


<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Time</th>
      <th>Miles</th>
      <th>Pace</th>
      <th>HR</th>
      <th>Temp</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @runs.each do |run| %>
      <tr>
        <td><%= link_to run.garmin_id, "http://connect.garmin.com/activity/#{run.garmin_id}" %></td>
        <td><%= run.time %></td>
        <td><%= run.display[:distance] %></td>
        <td><%= run.display[:pace] %></td>
        <td><%= run.mean_heart_rate %></td>
        <td><%= run.weather ? run.temp : run.treadmill? ? '-treadmill-' : link_to('Retrieve Weather', run_weather_index_path(run), method: :post, class: 'retrieve_weather') %></td>
        <td><%= link_to 'Show', run %></td>
        <td><%= link_to 'Edit', edit_run_path(run) %></td>
        <td><%= link_to 'Destroy', run, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
